{
  "name": "easylish-monorepo",
  "private": true,
  "packageManager": "pnpm@10.12.4",
  "workspaces": [
    "apps/*",
    "services/*"
  ],
  "scripts": {
    "dev": "pnpm -C apps/web dev",
    "build": "pnpm -C apps/web build",
    "start": "pnpm -C apps/web start",
    "lint": "pnpm -C apps/web lint",
    "test": "vitest run --pool=forks --isolate=false",
    "test:watch": "vitest --pool=forks --isolate=false",
    "coverage": "vitest run --coverage --pool=forks --isolate=false",
    "transcribe:local": "node scripts/transcribe.mjs",
    "bili:range": "node scripts/bili-batch.mjs"
  },
  "devDependencies": {
    "vitest": "^2.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "typescript": "^5"
  }
}
